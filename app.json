{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.panteasmart.occupancysim",
  "version": "1.0.0",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "com.panteasmart.occupancysim"
  },
  "description": {
    "en": "occupancy simulator that turns lights on and off with statistics"
  },
  "category": [
    "lights"
  ],
  "permissions": [
    "homey:manager:api",
    "homey:manager:geolocation"
  ],
  "api": {
    "setHomeyApi": {
      "method": "GET",
      "path": "/homey-api",
      "public": true
    },
    "getDeviceCapabilities": {
      "method": "GET",
      "path": "/getDeviceCapabilities/",
      "public": true
    },
    "getDevicesWithOnOff": {
      "method": "GET",
      "path": "/getDevicesWithOnOff",
      "public": true
    },
    "getDevicesWithCapabilities": {
      "method": "GET",
      "path": "/getDevicesWithCapabilities",
      "public": true
    },
    "getCommonDeviceCapabilities": {
      "method": "GET",
      "path": "/getCommonDeviceCapabilities/",
      "public": true
    },
    "getDevices": {
      "method": "GET",
      "path": "/getDevices",
      "public": true
    },
    "getSettings": {
      "method": "GET",
      "path": "/getSettings",
      "public": true
    },
    "setSettings": {
      "method": "POST",
      "path": "/setSettings",
      "public": true
    },
    "getSimulatorSettings": {
      "method": "GET",
      "path": "/getSimulatorSettings",
      "public": true
    },
    "setSimulatorSettings": {
      "method": "POST",
      "path": "/setSimulatorSettings",
      "public": true
    },
    "getUserInfo": {
      "method": "GET",
      "path": "/getUserInfo",
      "public": true
    },
    "refresh": {
      "method": "GET",
      "path": "/refresh",
      "public": true
    },
    "getZones": {
      "method": "GET",
      "path": "/getZones",
      "public": true
    }
  },
  "images": {
    "small": "/assets/images/icon.svg",
    "large": "/assets/images/icon.svg",
    "xlarge": "/assets/images/icon.svg"
  },
  "brandColor": "#00B8D4",
  "author": {
    "name": "Pantea Smart",
    "email": "fernanpizarro@gmail.com"
  },
  "drivers": [
    {
      "id": "occupancy_logger_switch",
      "name": {
        "en": "Occupancy Logger Switch"
      },
      "class": "socket",
      "platforms": [
        "local"
      ],
      "images": {
        "small": "/drivers/occupancy_logger_switch/assets/icon.svg",
        "large": "/drivers/occupancy_logger_switch/assets/icon.svg",
        "xlarge": "/drivers/occupancy_logger_switch/assets/icon.svg"
      },
      "connectivity": [],
      "capabilities": [
        "onoff",
        "onoff_simulator"
      ],
      "settings": [],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "onoff_simulator": {
      "title": {
        "en": "Simulation",
        "es": "Simulación"
      },
      "desc": {
        "en": "Start or stop the occupancy simulation",
        "es": "Activa o detiene la simulación de ocupación"
      },
      "type": "boolean",
      "getable": true,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false
    }
  }
}